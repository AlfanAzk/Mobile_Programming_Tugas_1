<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ConstraintsActivity">

    <TextView
        android:id="@+id/tv_1"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:text="gravity = start"
        android:textColor="@color/white"
        android:background="@android:color/holo_blue_bright"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/tv_2"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:text="gravity = center"
        android:gravity="center"
        android:textColor="@color/white"
        android:background="@android:color/holo_green_light"
        app:layout_constraintTop_toBottomOf="@id/tv_1"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/tv_3"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:text="gravity = center_horizontal"
        android:gravity="center_horizontal"
        android:textColor="@color/white"
        android:background="@android:color/holo_purple"
        app:layout_constraintTop_toBottomOf="@id/tv_2"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/tv_4"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:text="gravity = end"
        android:gravity="end|bottom"
        android:textColor="@color/white"
        android:background="@android:color/holo_red_light"
        app:layout_constraintTop_toBottomOf="@id/tv_3"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/tv_5"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_gravity="start"
        android:background="@android:color/holo_green_light"
        android:gravity="start"
        android:text="Layout gravity = start"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_4" />

    <TextView
        android:id="@+id/tv_6"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:text="Layout gravity = center"
        android:layout_gravity="center"
        android:gravity="center"
        android:textColor="@color/white"
        android:background="@android:color/holo_purple"
        app:layout_constraintTop_toBottomOf="@id/tv_5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/tv_7"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:text="Layout gravity = end"
        android:layout_gravity="end"
        android:gravity="end|bottom"
        android:textColor="@color/white"
        android:background="@android:color/holo_red_light"
        app:layout_constraintTop_toBottomOf="@id/tv_6"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>